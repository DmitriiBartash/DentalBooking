@page
@using DentalBooking.Domain.Enums
@model DentalBooking.Web.Pages.Client.MyBookingsModel
@{
    ViewData["Title"] = "My Bookings";
    Layout = "_LayoutClient";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-primary text-white text-center py-3">
                <h4 class="mb-0">
                    <i class="fas fa-list me-2"></i> My Bookings
                </h4>
            </div>

            <div class="card-body p-4">
                @if (Model.Bookings == null || !Model.Bookings.Any())
                {
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle me-2"></i>You have no bookings yet.
                    </div>
                }
                else
                {
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Procedure</th>
                                <th>Doctor</th>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var booking in Model.Bookings)
                            {
                                var localStart = booking.StartUtc.ToLocalTime();
                                var status = booking.Status;
                                var badgeClass =
                                status == BookingStatus.Confirmed ? "bg-success" :
                                status == BookingStatus.Cancelled ? "bg-danger" :
                                status == BookingStatus.Completed ? "bg-primary" :
                                "bg-secondary";

                                <tr>
                                    <td>@booking.ProcedureName</td>
                                    <td>@booking.DoctorName</td>
                                    <td>@localStart.ToString("dd.MM.yyyy")</td>
                                    <td>@localStart.ToString("HH:mm")</td>
                                    <td>
                                        <span class="badge @badgeClass">@status</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>
