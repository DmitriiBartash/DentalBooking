@page
@model DentalBooking.Web.Pages.Client.ProfileModel
@{
    ViewData["Title"] = "My Profile";
    Layout = "_LayoutClient";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-primary text-white text-center py-3">
                <h4 class="mb-0">
                    <i class="fas fa-user me-2"></i> My Profile
                </h4>
            </div>

            <div class="card-body p-4">
                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
                        <i class="fas fa-check-circle me-2"></i>@Model.SuccessMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>@Model.ErrorMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Input.FirstName" class="form-label fw-bold"></label>
                        <input asp-for="Input.FirstName" class="form-control" />
                        <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.LastName" class="form-label fw-bold"></label>
                        <input asp-for="Input.LastName" class="form-control" />
                        <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Phone" class="form-label fw-bold"></label>
                        <input asp-for="Input.Phone" class="form-control" />
                        <span asp-validation-for="Input.Phone" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label fw-bold"></label>
                        <input asp-for="Input.Email" class="form-control bg-light text-muted" readonly />
                        <span class="form-text text-muted">Email cannot be changed</span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mt-3">
                        <i class="fas fa-save me-2"></i> Save Changes
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
