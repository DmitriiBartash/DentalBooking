@page
@model DentalBooking.Web.Pages.Admin.DoctorsModel
@{
    ViewData["Title"] = "Doctors";
    Layout = "_LayoutAdmin";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-dark text-white text-center py-3">
                <h4 class="mb-0">
                    <i class="fas fa-user-md me-2"></i> Doctors
                </h4>
            </div>

            <div class="card-body p-4">
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger" role="alert">@Model.ErrorMessage</div>
                }
                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="alert alert-success" role="alert">@Model.SuccessMessage</div>
                }

                <a class="btn btn-primary mb-3" asp-page-handler="Create">
                    <i class="fas fa-plus"></i> Add Doctor
                </a>

                @if (Model.Doctors == null || !Model.Doctors.Any())
                {
                    <div class="alert alert-info text-center" role="alert">
                        <i class="fas fa-info-circle me-2"></i>No doctors found.
                    </div>
                }
                else
                {
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Procedures</th>
                                <th scope="col" class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var d in Model.Doctors)
                            {
                                <tr>
                                    <td>@d.FullName</td>
                                    <td>
                                        @if (d.ProcedureIds != null && d.ProcedureIds.Any())
                                        {
                                            var names = Model.AllProcedures
                                                .Where(p => d.ProcedureIds.Contains(p.Id))
                                                .Select(p => p.Name);

                                            @string.Join(", ", names)
                                        }
                                        else
                                        {
                                            <span class="text-muted">No procedures</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a class="btn btn-sm btn-outline-primary me-1"
                                           asp-page-handler="Edit"
                                           asp-route-id="@d.Id">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>

                                        <form method="post"
                                              asp-page-handler="Delete"
                                              asp-route-id="@d.Id"
                                              class="d-inline"
                                              onsubmit="return confirm('Delete this doctor?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>
