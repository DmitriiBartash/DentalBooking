@page
@model DentalBooking.Web.Pages.Admin.BookingsModel
@{
    ViewData["Title"] = "Bookings";
    Layout = "_LayoutAdmin";
}

<div class="row justify-content-center">
    <div class="col-lg-12">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-dark text-white text-center py-3">
                <h4 class="mb-0">
                    <i class="fas fa-calendar-check me-2"></i> Bookings
                </h4>
            </div>

            <div class="card-body p-4">
                <form method="get" class="row g-3 mb-4 align-items-end">
                    <div class="col-md-2">
                        <label class="form-label">Doctor</label>
                        <select class="form-select" name="DoctorId">
                            <option value="">All</option>
                            @foreach (var doc in Model.AllDoctors)
                            {
                                <option value="@doc.Id" selected="@(Model.DoctorId == doc.Id ? "selected" : null)">
                                    @doc.FullName
                                </option>
                            }
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Procedure</label>
                        <select class="form-select" name="ProcedureId">
                            <option value="">All</option>
                            @foreach (var proc in Model.AllProcedures)
                            {
                                <option value="@proc.Id" selected="@(Model.ProcedureId == proc.Id ? "selected" : null)">
                                    @proc.Name
                                </option>
                            }
                        </select>
                    </div>

                    <div class="col-md-2">
                        <label class="form-label">Status</label>
                        <select class="form-select" name="Status">
                            <option value="">All</option>
                            @foreach (var status in Enum.GetValues(typeof(DentalBooking.Domain.Enums.BookingStatus)))
                            {
                                <option value="@status" selected="@(Model.Status?.ToString() == status.ToString() ? "selected" : null)">
                                    @status
                                </option>
                            }
                        </select>
                    </div>

                    <div class="col-md-2">
                        <label class="form-label">From</label>
                        <input type="date" class="form-control" name="From" value="@(Model.From?.ToString("yyyy-MM-dd"))" />
                    </div>

                    <div class="col-md-2">
                        <label class="form-label">To</label>
                        <input type="date" class="form-control" name="To" value="@(Model.To?.ToString("yyyy-MM-dd"))" />
                    </div>

                    <div class="col-md-1 d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> Filter
                        </button>
                    </div>
                </form>

                @if (Model.Bookings == null || !Model.Bookings.Any())
                {
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle me-2"></i>No bookings found.
                    </div>
                }
                else
                {
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Client</th>
                                <th>Doctor</th>
                                <th>Procedure</th>
                                <th>Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var b in Model.Bookings)
                            {
                                <tr>
                                    <td>@b.ClientEmail</td>
                                    <td>@b.DoctorName</td>
                                    <td>@b.ProcedureName</td>
                                    <td>@b.StartUtc.ToLocalTime().ToString("g")</td>
                                    <td>
                                        <form method="post" asp-page-handler="ChangeStatus" asp-route-id="@b.Id" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <select name="NewStatus" class="form-select form-select-sm d-inline w-auto" onchange="this.form.submit()">
                                                @foreach (var status in Enum.GetValues(typeof(DentalBooking.Domain.Enums.BookingStatus)))
                                                {
                                                    var s = (DentalBooking.Domain.Enums.BookingStatus)status;
                                                    <option value="@s" selected="@(b.Status == s ? "selected" : null)">
                                                        @s
                                                    </option>
                                                }
                                            </select>
                                        </form>

                                        @switch (b.Status)
                                        {
                                            case DentalBooking.Domain.Enums.BookingStatus.Pending:
                                                <span class="badge bg-secondary ms-2">Pending</span>
                                                break;
                                            case DentalBooking.Domain.Enums.BookingStatus.Confirmed:
                                                <span class="badge bg-info ms-2">Confirmed</span>
                                                break;
                                            case DentalBooking.Domain.Enums.BookingStatus.Completed:
                                                <span class="badge bg-success ms-2">Completed</span>
                                                break;
                                            case DentalBooking.Domain.Enums.BookingStatus.Cancelled:
                                                <span class="badge bg-danger ms-2">Cancelled</span>
                                                break;
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>
