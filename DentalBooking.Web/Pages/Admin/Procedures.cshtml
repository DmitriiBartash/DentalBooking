@page
@model DentalBooking.Web.Pages.Admin.ProceduresModel
@{
    ViewData["Title"] = "Procedures";
    Layout = "_LayoutAdmin";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-dark text-white text-center py-3">
                <h4 class="mb-0">
                    <i class="fas fa-tooth me-2"></i> Procedures
                </h4>
            </div>

            <div class="card-body p-4">
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>@Model.ErrorMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>@Model.SuccessMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <a class="btn btn-primary mb-3" asp-page="/Admin/CreateProcedure">
                    <i class="fas fa-plus"></i> Add Procedure
                </a>

                @if (Model.Procedures == null || !Model.Procedures.Any())
                {
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle me-2"></i>No procedures found.
                    </div>
                }
                else
                {
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Code</th>
                                <th>Name</th>
                                <th>Duration</th>
                                <th>Price (MDL)</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model.Procedures)
                            {
                                <tr>
                                    <td>@p.Code</td>
                                    <td>@p.Name</td>
                                    <td>@p.DurationMinutes min</td>
                                    <td>@p.Price.ToString("N2")</td>
                                    <td class="text-end">
                                        <a class="btn btn-sm btn-outline-primary me-1"
                                           asp-page="/Admin/EditProcedure"
                                           asp-route-id="@p.Id">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <form method="post"
                                              asp-page-handler="Delete"
                                              asp-route-id="@p.Id"
                                              class="d-inline"
                                              onsubmit="return confirm('Delete this procedure?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>
