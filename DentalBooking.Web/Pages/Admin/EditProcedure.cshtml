@page "{id:int}"
@model DentalBooking.Web.Pages.Admin.EditProcedureModel
@{
    ViewData["Title"] = "Edit Procedure";
    Layout = "_LayoutAdmin";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-dark text-white text-center py-3">
                <h4 class="mb-0">
                    <i class="fas fa-tooth me-2"></i> Edit Procedure
                </h4>
            </div>

            <div class="card-body p-4">
                <form method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Input.Id" />

                    <div class="mb-3">
                        <label asp-for="Input.Code" class="form-label fw-bold"></label>
                        <input asp-for="Input.Code" class="form-control" />
                        <span asp-validation-for="Input.Code" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Name" class="form-label fw-bold"></label>
                        <input asp-for="Input.Name" class="form-control" />
                        <span asp-validation-for="Input.Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.DurationMinutes" class="form-label fw-bold"></label>
                        <input asp-for="Input.DurationMinutes" class="form-control" type="number" min="1" max="300" />
                        <span asp-validation-for="Input.DurationMinutes" class="text-danger small"></span>
                        <span class="form-text text-muted">Duration in minutes (1–300)</span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Price" class="form-label fw-bold"></label>
                        <input asp-for="Input.Price" class="form-control" type="number" step="0.01" min="0" />
                        <span asp-validation-for="Input.Price" class="text-danger small"></span>
                        <span class="form-text text-muted">Price in MDL</span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mt-3">
                        <i class="fas fa-save me-2"></i> Save Changes
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
