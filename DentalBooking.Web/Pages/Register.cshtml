@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/auth.css" />
</head>

<div class="auth-wrapper">
    <div class="auth-card shadow-lg bg-white rounded">
        <div class="card-header text-center bg-primary text-white rounded-top">
            <i class="fas fa-user-plus"></i>
            <h3 class="mb-0">Create Account</h3>
        </div>

        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger text-center mb-3">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @Model.ErrorMessage
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success text-center mb-3">
                    <i class="fas fa-check-circle me-2"></i>
                    @Model.SuccessMessage
                </div>
            }

            <form method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
                    </div>
                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input asp-for="LastName" class="form-control" placeholder="Enter your last name" />
                    </div>
                    <span asp-validation-for="LastName" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-phone"></i></span>
                        <input asp-for="Phone" class="form-control" placeholder="Enter your phone number" />
                    </div>
                    <span asp-validation-for="Phone" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-login w-100">
                    <i class="fas fa-user-check me-2"></i> Register
                </button>
            </form>
        </div>

        <div class="card-footer text-center">
            <small>Already have an account? <a href="/Login">Login here</a></small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
